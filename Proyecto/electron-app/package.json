{
  "name": "zfcocteles",
  "private": true,
  "version": "1.0.0",
  "description": "Una aplicación Electron + React + Vite donde podrás encontrar y gestionar recetas cócteles.",
  "author": "ZFCfans Team",
  "type": "module",
  "main": "src/main/main.js",
  "scripts": {
    "setup": "npm install && npm run rebuild-sqlite",
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development npx electron .\"",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "test": "vitest",
    "lint": "eslint .",
    "rebuild-sqlite": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild-sqlite"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
